@model  WebBanHangOnline.Areas.Admin.Models.LoginModel
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="main-page login-page ">
    <h2 class="title1">Đăng nhập</h2>
    <div class="widget-shadow">
        <div class="login-body">
            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
            {
                @Html.ValidationSummary(false, "", new { @class = "text-danger" });
            <form action="#" method="post">
                <div class="form-group">
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @autofocus = "autofocus" })
                </div>
                <div class="form-group" style="margin-left:inherit">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control"})
                </div>
                <div class="forgot-grid">
                    <label>
                        @Html.CheckBoxFor(model => model.RememberMe) Nhớ mật khẩu
                    </label>
                    <div class="forgot">
                        <a href="#">Quên mật khẩu?</a>
                    </div>
                    <div class="clearfix"> </div>
                </div>
                <input type="submit" name="Sign In" value="Đăng nhập">
                <div class="registration">
                    Bạn chưa có tài khoản ?
                    <a class="" href="/Admin/User/Create">
                        Tạo tài khoản tại đây
                    </a>
                </div>
            </form>
            }

        </div>
    </div>

</div>

