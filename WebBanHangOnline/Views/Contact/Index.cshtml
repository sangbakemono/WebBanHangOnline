@model Model.FrameWork.Contact
@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #mapCanvas {
        height: 600px;
    }
</style>
@section jsFooter{
    <script src="https://maps.googleapis.com/maps/api/js"></script>
    <script src="~/Content/js/controller/contactController.js"></script>
    <script>

        function initMap() {
            var uluru = { lat: 21.016407, lng: 105.851597 };
            var map = new google.maps.Map(document.getElementById('mapCanvas'), {
                zoom: 18,
                center: uluru
            });

            var marker = new google.maps.Marker({
                position: uluru,
                map: map,
                title: 'Địa chỉ'
            });
            marker.addListener('click', function () {
                infowindow.open(map, marker);
            });
        }
        google.maps.event.addDomListener(window, 'load', initMap);
    </script>


}
<header>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-6">
                    <h2 style="font-size:30px; margin-left: 150px; margin-top: 20px">Thông tin liên hệ</h2><br />
                         <hr />
                    <form>
                        <div class="row field-row">
                            <div class="col-xs-12 col-sm-12">
                                <label>Họ tên</label>
                                <input type="text" class="le-input form-control" id="txtName">
                            </div>
                        </div>
                        <br />
                        <div class="row field-row">
                            <div class="col-xs-12 col-sm-12">
                                <label>Điện thoại</label>
                                <input type="text" class="le-input form-control" id="txtMobile">
                            </div>
                        </div>
                        <br />
                        <div class="row field-row">
                            <div class="col-xs-12 col-sm-12">
                                <label>Địa chỉ</label>
                                <input type="text" class="le-input form-control" id="txtAddress">
                            </div>
                        </div>
                        <br />
                        <div class="row field-row">
                            <div class="col-xs-12 col-sm-12">
                                <label>Email</label>
                                <input type="text" class="le-input form-control" id="txtEmail">
                            </div>
                        </div>
                        <br />
                        <div class="row field-row">
                            <div class="col-xs-12 col-sm-12">
                                <label>Yêu cầu</label>
                                <textarea id="txtContent" class="le-input form-control"></textarea>
                            </div>
                        </div>
                        <br />
                        <button id="btnSend" class="le-button" style="background-color: darkorange; color: white; width: 150px; height: 50px; font-size: 20px">Gửi đi</button>
                    </form>
                </div>
                <div class="col-md-6">
                    <h2 style="font-size:30px; margin-left: 200px; margin-top: 20px">Bản đồ</h2><br />
                    <div class="map" id="mapCanvas" style="margin-top: 20px"></div>
                </div>
            </div>
        </div>
    </div>
</header>
