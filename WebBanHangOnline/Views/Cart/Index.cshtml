@model List<WebBanHangOnline.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    <script src="~/Content/js/controller/cartController.js"></script>
}
<h1 style="font-size:30px; text-align: center; margin-top:20px">Giỏ hàng của bạn</h1>
<div class="content">
    <div class="section group">
        @if (Model.Count > 0)
        {
            <table class="table table-striped">
                <thead>
                    <tr style="text-align: center; font-weight:bold">
                        <td>Mã sp</td>
                        <td>Tên sp</td>
                        <td>Ảnh sp</td>
                        <td>số lượng</td>
                        <td>giá</td>
                        <td>Thành tiền</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr style="text-align: center; margin-top: 5px">
                        <td>@item.Product.ID</td>
                        <td>@item.Product.Name</td>
                        <td><img src="~/Content/HinhAnhSP/@item.Product.Image" width="80" /></td>
                        @*<td>@item.Quantity</td>*@
                        <td ><input style="text-align:center" type="text" class="txtquantity" data-id="@item.Product.ID" value="@item.Quantity" /></td>
                        <td>@item.Product.Price.GetValueOrDefault(0).ToString("N0") VNĐ</td>
                        <td>@((item.Product.Price.GetValueOrDefault(0) * item.Quantity).ToString("N0")) VNĐ</td>
                        <td><a href="#" data-id="@item.Product.ID" class="btn-delete">Xóa</a></td>
                    </tr>
                    }
                </tbody>
            </table>
            <hr/>
            <div style="text-align: center">
                <button id="btnContinue" class="btn" style="height: 40px; background-color: darkorange; color: white; font-weight:bold">Tiếp tục mua hàng</button>
                <button id="btnUpdate" class="btn" style="height: 40px; background-color: darkorange; color: white; font-weight:bold">Cập nhật giỏ hàng</button>
                <button id="btnDeleteAll" class="btn" style="height: 40px; background-color: darkorange; color: white; font-weight:bold">Xóa giỏ hàng</button>
                <button id="btnPayment" class="btn" style="height: 40px; background-color: darkorange; color: white; font-weight:bold">Thanh toán</button>
            </div>            
        }
        else
        {
            <span class="alert alert-danger">Chưa có sản phẩm nào trong giỏ hàng</span>
        }
    </div>
</div>

