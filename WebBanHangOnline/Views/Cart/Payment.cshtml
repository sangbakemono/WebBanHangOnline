
@model List<WebBanHangOnline.Models.CartItem>
@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    <script src="~/Content/js/controller/cartController.js"></script>
}
<h1 style="font-size:30px; text-align: center; margin-top:20px">Giỏ hàng của bạn</h1>
<div class="content">
    <div class="section group">
        @if (Model.Count > 0)
        {
            <table style="width:100%" height="200">
                <thead>
                    <tr style="text-align: center; font-weight:bold">
                        <td>Mã sp</td>
                        <td>Tên sp</td>
                        <td>Ảnh sp</td>
                        <td>số lượng</td>
                        <td>giá</td>
                        <td>Thành tiền</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr style="text-align: center; margin-top: 5px">
                            <td>@item.Product.ID</td>
                            <td>@item.Product.Name</td>
                            <td><img src="~/Content/HinhAnhSP/@item.Product.Image" width="80" /></td>
                            @*<td>@item.Quantity</td>*@
                            <td><input style="text-align:center" type="text" class="txtquantity" data-id="@item.Product.ID" value="@item.Quantity" /></td>
                            <td>@item.Product.Price.GetValueOrDefault(0).ToString("N0") VNĐ</td>
                            <td>@((item.Product.Price.GetValueOrDefault(0) * item.Quantity).ToString("N0")) VNĐ</td>
                            <td><a href="#" data-id="@item.Product.ID" class="btn-delete">Xóa</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <hr />
        }
    </div>
    <h1 style="font-size:30px; margin-left: 270px; margin-top:20px">Thông tin đặt hàng</h1>
    <div class="section group">
        <div class="col span_2_of_3">
            @using (Html.BeginForm("Payment", "Cart", FormMethod.Post))
            {
                <div class="contact-form">
                    <form>
                        <div>
                            <span><label>Tên khách hàng</label></span>
                            <span><input name="shipname" type="text" class="textbox"></span>
                        </div>
                        <div>
                            <span><label>Điện thoại</label></span>
                            <span><input name="mobile" type="text" class="textbox"></span>
                        </div>
                        <div>
                            <span><label>Địa chỉ</label></span>
                            <span><input name="address" type="text" class="textbox"></span>
                        </div>
                        <div>
                            <span><label>Email</label></span>
                            <span><input name="email" type="text" class="textbox"></span>
                        </div>
                        <div>
                            <span><input type="submit" value="Xác nhận" class="btn-default" style="height: 40px; font-size: 15px"></span>
                        </div>
                    </form>
                </div>
            }
        </div>
    </div>
</div>

