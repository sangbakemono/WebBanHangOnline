@model List<WebBanHangOnline.Models.CartItem>
<div class="cart">
    <p>
        <img src="~/Content/images/cart.png" alt="">  <span>Giỏ hàng:</span><div id="dd" class="wrapper-dropdown-2">
            @Model.Count sản phẩm
            <ul class="dropdown">
                @if (Model.Count > 0)
                {
                    <li>
                        <div class="basket-item">
                            @foreach (var item in Model)
                            {
                                <div class="row">
                                    <div class="col-xs-4 col-sm-4 no-margin text-center">
                                        <div class="thumb">
                                            <img alt="" src="~/Content/HinhAnhSP/@item.Product.Image" />
                                        </div>
                                    </div>
                                    <div class="col-xs-8 col-sm-8 no-margin">
                                        <div class="title">@item.Product.Name</div>
                                        <div class="price">@item.Product.Price VNĐ</div>
                                        <a class="close-btn" href="#" data-id="@item.Product.ID"></a>
                                    </div>
                                </div>
                            }
                        </div>
                    </li>
                }
                <li class="checkout">
                    <div class="basket-item">
                        <div class="row">
                            <div class="col-xs-12 col-sm-6">
                                <a href="\Cart" class="button" style="font-size: 16px">Giỏ hàng</a>
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <a href="\" class="button" style="font-size: 16px">Mua hàng</a>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </p>
</div>